!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= page_title
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Maná | Ropa para bebés'}"}
    = stylesheet_link_tag "application", media: "all"
    = favicon_link_tag '/ico/mana-icon-144.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag '/ico/mana-icon-114.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag '/ico/mana-icon-72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag '/ico/mana-icon-57.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag '/ico/favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta(name="keywords" content="Ropa para bebes")
    %meta(name="description" content="Maná, ropa para bebés")
    %meta(name="googlebot" content="index,follow")
    %meta(name="robots" content="index,follow")
    %meta(name="Revisit-After" content="7 days")
    %meta(name="city" content="Lima")
    %meta(name="country" content="Peru")
    %meta(name="state" content="Lima")
    %meta(name="subject" content="Baby Clothing")
    %meta(name="author" content="Maná")
    %meta(name="copyright" content="Maná &copy; Todos los derechos reservados.")
    %meta(name="geo.placename" content="Lima, Peru")
    %meta(name="geo.region" content="PE-Lima")
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
    = render 'shared/google_analytics'
